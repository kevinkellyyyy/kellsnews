<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textviewseach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Search News"
        android:fontFamily="sans-serif-light"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/editseachnews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textviewseach"
        android:layout_toLeftOf="@+id/btnSearchnews"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnSearchnews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textviewseach"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recViewTampilDariSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nav_bawah"
        android:layout_below="@+id/texttest">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/texttest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_below="@+id/editseachnews"/>

</RelativeLayout>